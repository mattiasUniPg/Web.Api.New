@using Product.Api.Models;
@model ProductDto;

@{
    ViewBag.Title = "Aggiungi Elemento";
}

@if (ViewBag.Message != null)
{
    <div roll="alert" class="alert alert-success">
        @ViewBag.Message
    </div>
}

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div>Aggiungi nuovo Elemento</div>
        <hr>
        @Html.HiddenFor(model => model.Id)
        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new {@class = "label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name)
            </div>
        </div>
        <hr>
        <div class="form-group">
            @Html.LabelFor(model => model.Price, htmlAttributes: new {@class = "label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.Price)
            </div>
        </div>
        <hr>
        <div class="form-group">
            @Html.LabelFor(model => model.Quantity, htmlAttributes: new {@class = "label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.Quantity)
            </div>
        </div>
        <hr>
        <div class="form-group">
            @Html.LabelFor(model => model.Description, htmlAttributes: new {@class = "label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.Description)
            </div>
        </div>
        
         <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Aggiungi" class="btn btn-primary"/>
            </div>
        </div>

    </div>
}
<div>
    @Html.ActionLink("Indietro","Index")
</div>

